<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="420.0" prefWidth="660.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.SearchController">
   <children>
      <ListView fx:id="listViewWord" layoutX="32.0" layoutY="86.0" onMouseClicked="#onSelectListView" prefHeight="315.0" prefWidth="227.0" />
      <TextField fx:id="searchFieldWord" layoutX="32.0" layoutY="24.0" onKeyReleased="#onChangeSearchField" prefHeight="35.0" prefWidth="227.0" promptText="Nhập từ tiếng anh cần tìm" />
      <Label fx:id="spellingWord" layoutX="332.0" layoutY="51.0" text="Label" />
      <WebView fx:id="explainWord" layoutX="330.0" layoutY="86.0" prefHeight="315.0" prefWidth="304.0" />
      <Button fx:id="btnDelete" layoutX="467.0" layoutY="21.0" mnemonicParsing="false" onAction="#deleteWord" prefHeight="51.0" prefWidth="73.0" text="Delete" />
      <Button fx:id="bookmarkStar" layoutX="561.0" layoutY="47.0" mnemonicParsing="false" onAction="#onClickStar" text="BookmarkUnstar" />
      <Button fx:id="bookmarkFilledStar" layoutX="561.0" layoutY="11.0" mnemonicParsing="false" onAction="#onClickFilledStar" text="BookmarkStar" />
   </children>
</AnchorPane>
